{% extends 'ForumForumBundle:Default:index.html.twig' %}

{% block body %}
    <div id="app">
        <div class="top-bar">
            <div class="row">
                <div class="col-md-4 text-center">Posts: </div>
                <div class="col-md-4 text-center">
                    <button class="btn btn-md btn-primary">Export all</button>
                </div>
                <div class="col-md-4 text-center">Views: </div>
            </div>
        </div>
        <div class="content">
            <div class="reply-box row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <form class="reply-form">
                        <input type="text" class="form-control" placeholder="title" name="Title">
                        <input type="file" class="form-control">
                        <button class="btn btn-md btn-success">Upload</button>
                    </form>
                </div>
                <div class="col-md-2"></div>
            </div>
            <div class="posts-box">
                {% for post in posts %}
                    <div class="post text-center">
                        <div class="post-image">
                        </div>
                        <h5>{{ post.title }}</h5>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
{% endblock %}